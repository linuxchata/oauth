@page
@using Shark.Sample.AuthorizationServer.Pages.Device
@model DeviceAuthorizeModel
@{
    ViewData["Title"] = "OAuth 2.0 Authorization Server";
}

<div class="page-container">
    <div class="page-card">
        <h1 class="page-title">Shark OAuth 2.0 Authorization Server</h1>
        <p class="page-subtitle">Authorize your device for the client application</p>

        <div class="device-form">
            <form method="post" asp-page-handler="Authorize">
                <input type="submit" value="Authorize" class="device-button" />
            </form>

            <form method="post" asp-page-handler="Deny">
                <input type="submit" value="Deny" class="device-button deny" />
            </form>
        </div>
    </div>
</div>
