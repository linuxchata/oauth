@page
@model IndexModel
@{
    ViewData["Title"] = "OAuth Client";
}

<div class="text-center">
    <h1 class="display-4">OAuth Client</h1>

    <div class="form-container">
        <form method="post" asp-page-handler="GetAuthTokenAuthorizationCode">
            <label for="GetAuthTokenAuthorizationCode">
                Get OAuth token with Authorization Code grant type
            </label>
            <input type="submit" id="GetAuthTokenAuthorizationCode" value="Get token" />
        </form>

        <form method="post" asp-page-handler="GetDataAuthorizationCode">
            <label for="GetDataAuthorizationCode">
                Get Data from Protected Resource with Authorization Code grant type
            </label>
            <input type="submit" id="GetDataAuthorizationCode" value="Get Data" />
        </form>

        <form method="post" asp-page-handler="GetAuthTokenAuthorizationCodePkce">
            <label for="GetAuthTokenAuthorizationCodePkce">
                Get OAuth token with Authorization Code PKCE grant type
            </label>
            <input type="submit" id="GetAuthTokenAuthorizationCodePkce" value="Get token" />
        </form>

        <form method="post" asp-page-handler="GetDataAuthorizationCodePkce">
            <label for="GetDataAuthorizationCodePkce">
                Get Data from Protected Resource with Authorization Code PKCE grant type
            </label>
            <input type="submit" id="GetDataAuthorizationCodePkce" value="Get Data" />
        </form>

        <form method="post" asp-page-handler="GetAuthTokenImplicit">
            <label for="GetDataAuthorizationCodePkce">
                Get OAuth token with Implicit grant type
            </label>
            <input type="submit" id="GetAuthTokenImplicit" value="Get token" />
        </form>

        <form method="post" asp-page-handler="GetDataImplicit">
            <label for="GetDataImplicit">
                Get Data from Protected Resource with Implicit grant type
            </label>
            <input type="submit" id="GetDataImplicit" value="Get Data" />
        </form>

        <form method="post" asp-page-handler="GetDataResourceOwnerCredentials">
            <label for="GetDataResourceOwnerCredentials">
                Get Data from Protected Resource with Resource Owner Credentials grant type
            </label>
            <input type="submit" id="GetDataResourceOwnerCredentials" value="Get Data" />
        </form>

        <form method="post" asp-page-handler="GetDataClientCredentials">
            <label for="GetDataClientCredentials">
                Get Data from Protected Resource with Client Credentials grant type
            </label>
            <input type="submit" id="GetDataClientCredentials" value="Get Data" />
        </form>
    </div>
    <br />
    @if (Model.Data is not null)
    {
        <div class="center-20">
            @foreach (var item in Model.Data)
            {
                <pre>
                    <span>@Html.DisplayFor(modelItem => item.Date):&nbsp;</span>
                    <span>@Html.DisplayFor(modelItem => item.TemperatureC)&degC&nbsp;</span>
                    <span>@Html.DisplayFor(modelItem => item.Summary)</span>
                </pre>
            }
        </div>
    }
</div>
